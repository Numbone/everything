{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "*":["./src/*"],
        // "entities/*": ["src/entities/*"],
        // "app/*": ["src/app/*"],
        // "features/*": ["src/features/*"],
        // "pages/*": ["src/pages/*"],
        // "shared/*": ["src/shared/*"],
        // "widjet/*": ["src/widjet/*"],
      },
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "compilerOptions": {
          "module": "CommonJS"
        }
      },
      "include": [
        "./config/jest/setupTests.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx",
      ],
  }